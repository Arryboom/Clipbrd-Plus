        //通过指定关键字查询并关闭窗口
        public static void FindCloseWindow(string name)
        {
            if (MyVariable.Variable.TempLoadedHistory == true)
            {
                foreach (Window window in Application.Current.Windows)
                {
                    if (window.Title == name)
                    {
                        //window.ShowInTaskbar = false;
                        window.Close();
                    }

                }
            }
        }
    }
