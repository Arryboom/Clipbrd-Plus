<Window x:Class="Clipbrd_Plus.history"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Clipbrd_Plus"
        mc:Ignorable="d"
        Title="history" Height="500" Width="301" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Closing="Window_Closing" AutomationProperties.Name="history" Opacity="50" WindowStyle="None" MouseLeave="Window_MouseLeave">
    <Grid x:Name="HistoryWindow" >


        <Grid x:Name="HistoryBar" Height="30" Margin="0" VerticalAlignment="Top" Background="#34b4c8" MouseDown="HistoryBar_OnMouseDown">
            <md:PackIcon Margin="5,0,0,0" Height="20" Width="20" Kind="History" Foreground="White" VerticalAlignment="Center"/>
            <TextBlock Margin="30,0" Height="20" FontSize="14" Foreground="White" Text="剪切板历史记录" HorizontalAlignment="Left" VerticalAlignment="Center" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ExitButton" Width="30" Height="Auto"  Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" Click="ButtonBase_OnClick">
                    <md:PackIcon Width="30" Height="30" Kind="Close" Foreground="White" ></md:PackIcon>
                </Button>
            </StackPanel>
        </Grid>

        <Grid x:Name="BodyGrid" Margin="0,30,0,0" >

            <Grid Height="35" Margin="0" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                <ListView  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">

                    <!--水平显示表项-->
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <!--水平显示表项-->


                    <ListViewItem Width="100" Height="35" >
                        <StackPanel Orientation="Horizontal" >
                            <md:PackIcon Kind="FileDocument"  Foreground="#34b4c8"></md:PackIcon>
                            <TextBlock Margin="5,0,0,0" Text="全部类型" Foreground="#34b4c8"></TextBlock>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Width="100" Height="35" >
                        <StackPanel Orientation="Horizontal" >
                            <md:PackIcon Kind="Text"  Foreground="#34b4c8"></md:PackIcon>
                            <TextBlock Margin="5,0,0,0" Text="文本类型" Foreground="#34b4c8"></TextBlock>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Width="100" Height="35" >
                        <StackPanel Orientation="Horizontal" >
                            <md:PackIcon Kind="Image"  Foreground="#34b4c8"></md:PackIcon>
                            <TextBlock Margin="5,0,0,0" Text="位图类型" Foreground="#34b4c8"></TextBlock>
                        </StackPanel>
                    </ListViewItem>

                </ListView>
            </Grid>

            <Grid x:Name="UserGrid" Margin="0,35,0,0" >


            </Grid>
        </Grid>




    </Grid>
</Window>
